{% if field.value  == 1 %}
	<span class="badge text-bg-secondary">waiting for payment
	</span>
{% elseif field.value == 2 %}
	<span class="badge text-bg-info">payed
	{% elseif field.value == 3 %}
	<span class="badge text-bg-warning">currently being prepared
	{% elseif field.value == 4 %}
		<span class="badge text-bg-success">shipped
	{% elseif field.value == 5 %}
	<span class="badge text-bg-danger">canceled
		{% endif %}
