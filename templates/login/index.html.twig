{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-5">
		<h1>Connexion</h1>
		{% if error %}
			<div class="text-danger">{{error.messageKey|trans(error.messageData,'security')}}</div>
		{% endif %}
		<form action="{{path('app_login')}}" method="post">
			<label for="username">Email:</label>

			<input class="form-control" type="email" id="username" name="_username" value="{{last_username}}">

			<label for="password">Password:</label>
			<input class="form-control" type="password" id="password" name="_password">

			<input type="hidden" name="_target_path" value="{{path('app_account')}}">

			<button type="submit" class="btn btn-success mt-3">login</button>
		</form>
		<br/>
		Don't have an account ? <a href="{{path("app_register")}}">Register</a>
		</div>
	{% endblock %}
